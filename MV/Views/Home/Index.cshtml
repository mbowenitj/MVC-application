
@{
    ViewBag.Title = "Index";
}

<h2>Flint and Tinder MVC App</h2>

<html>
<head>
    <title>Angular JS Includes</title>
    <style>
        table, th, td {
            border: 1px solid grey;
            border-collapse: collapse;
            padding: 5px;
        }

            table tr:nth-child(odd) {
                background-color: #f2f2f2;
            }

            table tr:nth-child(even) {
                background-color: #ffffff;
            }
    </style>
</head>
<body>
    <h2>AngularJS Application</h2>
    <div ng-app="" ng-controller="jobController">
        <table>
            <tr>
                <th>Client</th>
                <th>Job Number</th>
                <th>Job Name</th>
                <th>Due</th>
                <th>Status</th>
                
            </tr>
            <tr ng-repeat="job in jobs">
                <td>{{ job.client }}</td>
                <td>{{ job.jobnumber }}</td>
                <td>{{ job.job_name }}</td>
                <td>{{ job.due }}</td>
                <td>{{ job.status }}</td>
            </tr>
        </table>
    </div>
    <script>
        function jobController($scope, $http) {
            var url = "http://localhost:51640/job.txt";
            $http.get(url).success(function (response) {
                $scope.jobs = response;
            });
        }
    </script>
    
    <script src="http://localhost:51640/angular.min.js"></script>
</body>
</html>
